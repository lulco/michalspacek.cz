<div id="video-thumbnail-container" n:if="$videoThumbnail->getUrl()">
	<picture n:tag-if="$videoThumbnail->getAlternativeUrl()">
		<source n:if="$videoThumbnail->getAlternativeUrl()" srcset="{$videoThumbnail->getAlternativeUrl()}" type="{$videoThumbnail->getAlternativeContentType()}">
		<img src="{$videoThumbnail->getUrl()}" alt="{_messages.label.videorecording}" width="{$videoThumbnail->getWidth()}" height="{$videoThumbnail->getHeight()}" {if $videoThumbnail->isLazyLoad()}loading="lazy"{/if}>
	</picture>
	<a href="{$videoThumbnail->getVideoHref()}" title="{_messages.label.play}">â–¶</a>
</div>
<p n:if="$videoThumbnail->getVideoHref()">
	<small n:tag-if="$videoThumbnail->getUrl()">
		<span title="{_messages.label.recording}">{icon camera-video}</span>
		<a href="{$videoThumbnail->getVideoHref()}">{$videoThumbnail->getVideoPlatform() ?? $videoThumbnail->getVideoHref()}</a>
	</small>
</p>
