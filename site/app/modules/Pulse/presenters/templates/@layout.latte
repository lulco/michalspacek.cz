{block|strip}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="referrer" content="origin">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{if isset($pageTitle)}{$pageTitle} | {/if}Pulse</title>
	{stylesheet screen-pulse}
	{script jquery+pulse async, defer}
	{if $trackingCode}{script googleanalytics async, defer}{/if}
	<link rel="icon" href="{='/i/icons/pulse.ico'|staticUrl}">
</head>
<body>
<div id="container">
<div id="header">
	{default $pageHeader = $pageTitle}
	<h1>{$pageHeader}</h1>
	{ifset #tagline}<p><em>{include #tagline}</em></p>{/ifset}
</div>
{ifset #menu}<div id="menu" class="inner-container">{include #menu}</div>{/ifset}
{include #content}
{include #footer}
</div>
</body>
</html>
{/block}
