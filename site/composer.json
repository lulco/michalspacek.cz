{
	"name": "spaze/michalspacek.cz",
	"type": "project",
	"description": "Source code for my site",
	"license": "MIT",
	"require": {
		"php": "^8.0",
		"ext-ctype": "*",
		"ext-fileinfo": "*",
		"ext-intl": "*",
		"ext-libxml": "*",
		"ext-mbstring": "*",
		"ext-pdo": "*",
		"ext-simplexml": "*",
		"contributte/translation": "^0.9.0",
		"latte/latte": "~2.3",
		"nette/application": "~3.0",
		"nette/bootstrap": "~3.0",
		"nette/component-model": "~3.0",
		"nette/database": "~3.0",
		"nette/forms": "~3.0",
		"nette/http": "^3.0.5",
		"nette/mail": "~3.0",
		"nette/robot-loader": "^3.0",
		"nette/security": "~3.1.4",
		"nette/utils": "~3.0",
		"paragonie/halite": "^4",
		"spaze/csp-config": "~2.0",
		"spaze/encryption": "^0.4",
		"spaze/feed-exports": "~0.2",
		"spaze/mysql-session-handler": "^2.0",
		"spaze/netxten": "~0.12",
		"spaze/nonce-generator": "^3.0",
		"spaze/phpinfo": "^0.1.0",
		"spaze/sri-macros": "~0.1",
		"texy/texy": "~3.0",
		"tracy/tracy": "~2.3"
	},
	"replace": {
		"paragonie/random_compat": "9.99.99",
		"paragonie/sodium_compat": "*",
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-mbstring": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php80": "*"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"nette/tester": "^2.0",
		"php-parallel-lint/php-console-color": "^0.3",
		"php-parallel-lint/php-console-highlighter": "^0.5.0",
		"php-parallel-lint/php-parallel-lint": "^1.2",
		"phpstan/phpdoc-parser": "^0.5.4",
		"phpstan/phpstan": "^0.12",
		"phpstan/phpstan-deprecation-rules": "^0.12.6",
		"phpstan/phpstan-nette": "^0.12",
		"roave/security-advisories": "dev-latest",
		"slevomat/coding-standard": "^7.0",
		"spaze/coding-standard": "^0.0",
		"spaze/phpstan-disallowed-calls": "^1.2",
		"spaze/phpstan-disallowed-calls-nette": "^1.0",
		"squizlabs/php_codesniffer": "^3.5"
	},
	"config": {
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"MichalSpacekCz\\": "app/"
		}
	},
	"scripts": {
		"cs-fix": "vendor/squizlabs/php_codesniffer/bin/phpcbf app/ public/ tests/",
		"lint": "vendor/php-parallel-lint/php-parallel-lint/parallel-lint --colors app/ public/ tests/",
		"phpcs": "vendor/squizlabs/php_codesniffer/bin/phpcs app/ public/ tests/",
		"phpstan": "vendor/phpstan/phpstan/phpstan -vvv --ansi analyse --configuration phpstan.neon",
		"phpstan-prod": "vendor/phpstan/phpstan/phpstan --ansi analyse --no-progress --configuration phpstan.neon",
		"phpstan-vendor": "vendor/phpstan/phpstan/phpstan -vvv --ansi analyse --configuration phpstan-vendor.neon",
		"phpstan-vendor-prod": "vendor/phpstan/phpstan/phpstan --ansi analyse --no-progress --configuration phpstan-vendor.neon",
		"test": [
			"@lint",
			"@phpcs",
			"@phpstan",
			"@phpstan-vendor",
			"@tester"
		],
		"test-prod": [
			"@lint",
			"@phpcs",
			"@phpstan-prod",
			"@phpstan-vendor-prod",
			"@tester-prod"
		],
		"tester": "vendor/nette/tester/src/tester -c tests/php-unix.ini --colors 1 --coverage coverage.html --coverage-src app/ tests/",
		"tester-prod": "vendor/nette/tester/src/tester -p php -C --colors 1 tests/"
	}
}
